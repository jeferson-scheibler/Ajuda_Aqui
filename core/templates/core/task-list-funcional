{% block javascript %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script>
    $(document).ready(function() {
        $('.edit-task-btn').click(function() {
            var taskId = $(this).data('task-id');
            $.ajax({
                url: "{% url 'fetch_task_data' %}",
                method: 'GET',
                data: {'task_id': taskId},
                success: function (data) {
                    $('#task_id_input').val(taskId);
                    $('#form-fields').html(data.form);  // Inserir campos do formulário
                    $('#editTaskModal').modal('show');  // Exibe o modal após preencher os dados
                },
                error: function (error) {
                    console.error('Erro ao carregar dados da tarefa:', error);
                }
            });
        });

        // Submeter o formulário de edição via AJAX
        $(document).on('submit', '#editTaskForm', function(event) {
            event.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: $(this).attr('hx-post'),
                method: 'POST',
                processData: false,
                contentType: false,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                data: formData,
                success: function(data) {
                    if (data.success) {
                        console.log('Tarefa atualizada com sucesso.');
                        $('#editTaskModal').modal('hide');  // Esconde o modal após sucesso
                        window.location.reload();  // Recarrega a página para mostrar as mudanças
                    } else {
                        console.error('Erro ao atualizar tarefa:', data.error);
                    }
                },
                error: function(error) {
                    console.error('Erro ao enviar requisição AJAX:', error);
                }
            });
        });

        // Excluir tarefa via formulário POST
        $('.delete-task-btn').click(function(event) {
            event.preventDefault();
            var confirmDelete = confirm("Tem certeza que deseja excluir esta tarefa?");
            if (confirmDelete) {
                var form = $(this).closest('form');
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function(data) {
                        if (data.success) {
                            alert(data.message);  // Exibe mensagem de sucesso
                            window.location.reload();  // Recarrega a página para atualizar a lista de tarefas
                        } else {
                            console.error('Erro ao excluir tarefa:', data.error);
                        }
                    },
                    error: function(error) {
                        console.error('Erro ao enviar requisição AJAX:', error);
                    }
                });
            }
        });
    });
</script>
{% endblock %}